---
// src/components/ContactSection.astro (DIPERBARUI DENGAN FORM WA)
import { supabase } from '../lib/supabase';

// Ambil info kontak dinamis untuk ditampilkan di sisi kiri
const { data: info, error } = await supabase
  .from('kontak')
  .select()
  .limit(1)
  .single();

if (error) {
  console.error("SERVER ERROR: Gagal mengambil data 'kontak':", error.message);
}

// Ambil juga email bisnis untuk tujuan 'mailto' di script
const businessEmail = info?.email || 'dyesablon@gmail.com';
---

<section id="contact" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom" data-animate="fade-up" data-delay="200">
    <div class="grid md:grid-cols-2 gap-12">
      
      <div>
        <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
          Hubungi Kami
        </span>
        <h2 class="text-3xl font-bold mb-6 text-gray-900 dark:text-white">Kami Senang Mendengar Anda</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-8">
          Punya pertanyaan atau butuh bantuan untuk memulai? Tim kami siap membantu Anda di setiap langkah.
        </p>
        
        {info && (
          <>
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="shrink-0 mt-1"><svg class="w-6 h-6 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg></div>
                <div class="ml-4">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Email</h3>
                  <p class="text-gray-600 dark:text-gray-300">{info.email}</p>
                </div>
              </div>
              <div class="flex items-start">
                  <div class="shrink-0 mt-1"><svg class="w-6 h-6 text-secondary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg></div>
                  <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Telepon</h3>
                    <p class="text-gray-600 dark:text-gray-300">{info.telepon}</p>
                  </div>
              </div>
            </div>
            
            <div class="mt-10">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Follow Us</h3>
              <div class="flex space-x-5">
                <a href={info.link_instagram} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors" aria-label="Instagram"><svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6" viewBox="0 0 16 16"><path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.917 3.917 0 0 0-1.417.923A3.927 3.927 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.703.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.916 3.916 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.926 3.926 0 0 0-.923-1.417A3.911 3.911 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0zM6.5 4.5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm-2 3a3 3 0 1 0 0 6 3 3 0 0 0 0-6zm-5 1.5a.5.5 0 1 1 1 0 .5.5 0 0 1-1 0z"/></svg></a>
                <a href={info.link_facebook} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors" aria-label="Facebook"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/></svg></a>
                <a href={info.link_whatsapp} target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors" aria-label="WhatsApp"><svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6 h-6" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.894 11.892-1.99-.001-3.956-.57-5.688-1.638l-6.345 1.687zM6.747 21.011l.999.584c1.594.928 3.387 1.409 5.232 1.409 5.49 0 9.94-4.45 9.94-9.941 0-2.648-1.04-5.14-2.903-6.998-1.857-1.858-4.34-2.904-6.99-2.903-5.49 0-9.94 4.449-9.94 9.941 0 2.021.603 3.965 1.725 5.62l.628.981-1.123 4.093 4.183-1.104zm9.402-5.58c-.273-.136-1.623-.8-1.875-.89s-.438-.135-.626.135c-.188.27-.706.89-.865 1.065s-.318.2-.598.065c-.28-.135-1.188-.435-2.263-1.39s-1.788-2.385-2.086-2.805c-.297-.42-.045-.645.09-.78s.3-.36.45-.54c.15-.18.2-.27.3-.45s.045-.36-.023-.5c-.068-.135-.615-1.475-.84-2.025s-.45-.465-.625-.465H8.233c-.188 0-.48.068-.71.338s-.89.89-.89 2.16c0 1.27.915 2.505 1.05 2.685s1.815 2.805 4.395 3.89c.645.27 1.155.435 1.545.585s1.26.203 1.71.12c.51-.09 1.625-.667 1.85-1.29s.225-1.155.158-1.29c-.068-.135-.255-.203-.53-.338z"/></svg></a>
              </div>
            </div>
          </>
        )}
      </div>
      
      <div>
        <div class="card p-6 md:p-8 border border-gray-200 dark:border-gray-700 rounded-lg">
          <h3 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">Kirim Pesan Langsung</h3>
            <form id="contactPageForm" novalidate data-recipient-email={businessEmail}>
                <div class="mb-4">
                    <label for="form-nama" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nama Anda</label>
                    <input type="text" id="form-nama" name="nama" required class="w-full px-4 py-2 text-base rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900/50" placeholder="Tulis nama Anda" />
                </div>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label for="form-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email Anda</label>
                        <input type="email" id="form-email" name="email" required class="w-full px-4 py-2 text-base rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900/50" placeholder="Untuk balasan kami" />
                    </div>
                    <div>
                        <label for="form-wa" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Nomor WA/HP</label>
                        <input type="tel" id="form-wa" name="no_wa" class="w-full px-4 py-2 text-base rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900/50" required placeholder="628123456789" />
                    </div>
                </div>

                <div class="mb-6">
                    <label for="form-deskripsi" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Pesan / Deskripsi</label>
                    <textarea id="form-deskripsi" name="deskripsi" rows="5" required class="w-full px-4 py-2 text-base rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900/50" placeholder="Tulis pesan Anda..."></textarea>
                </div>
                <button type="submit" id="submit-button" class="w-full bg-primary-600 text-white font-semibold py-3 px-6 rounded-lg hover:bg-primary-700">
                    Kirim Pesan
                </button>
                <div id="form-feedback" class="mt-4 text-center text-sm"></div>
            </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  function setupContactPageForm() {
    const form = document.getElementById('contactPageForm');
    if (!form || form.dataset.listenerAttached === 'true') return;

    const recipientEmail = form.dataset.recipientEmail;
    
    const handleSubmit = async (event) => {
      event.preventDefault();

      const submitButton = document.getElementById('submit-button');
      const formFeedback = document.getElementById('form-feedback');

      // Ambil semua data dari form, termasuk nomor WA
      const nama = document.getElementById('form-nama').value;
      const email = document.getElementById('form-email').value;
      const no_wa = document.getElementById('form-wa').value; // <-- BARU
      const deskripsi = document.getElementById('form-deskripsi').value;

      if (!nama || !email || !deskripsi) {
        formFeedback.textContent = 'Harap isi Nama, Email, dan Pesan.';
        formFeedback.className = 'mt-4 text-center text-sm text-red-600';
        return;
      }

      submitButton.disabled = true;
      submitButton.textContent = 'Menyimpan...';
      formFeedback.textContent = ''; 

      try {
        const response = await fetch('/api/save-message', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          // Kirim juga no_wa ke API
          body: JSON.stringify({ nama, email, deskripsi, no_wa }),
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || `Gagal menghubungi server.`);
        }

        formFeedback.textContent = 'Data tersimpan! Membuka email...';
        formFeedback.className = 'mt-4 text-center text-sm text-green-600';
        form.reset(); 

        const subject = `Pesan Baru dari Kontak Website - ${nama}`;
        const body = `Pesan dari: ${nama}\nEmail: ${email}\nNo. WA: ${no_wa || 'Tidak diisi'}\n\n---\n\n${deskripsi}`;
        const mailtoLink = `mailto:${recipientEmail}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        
        setTimeout(() => { window.location.href = mailtoLink; }, 500);

      } catch (error) {
        formFeedback.textContent = `Error: ${error.message}`;
        formFeedback.className = 'mt-4 text-center text-sm text-red-600';
      } finally {
        submitButton.disabled = false;
        submitButton.textContent = 'Kirim Pesan';
      }
    };
    
    form.addEventListener('submit', handleSubmit);
    form.dataset.listenerAttached = 'true';
  }

  document.addEventListener('astro:page-load', setupContactPageForm);
  if (document.readyState !== 'loading') {
    setupContactPageForm();
  } else {
    document.addEventListener('DOMContentLoaded', setupContactPageForm);
  }
</script>